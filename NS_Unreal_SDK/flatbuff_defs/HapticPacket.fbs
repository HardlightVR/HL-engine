include "Sequence.fbs";
include "Pattern.fbs";
include "Experience.fbs";
include "HapticEffect.fbs";

namespace NullSpace.HapticFiles;

table Tracking {
	enable:bool;
}

enum Command:short {
	PLAY=0, PAUSE
}
table HandleCommand {
	handle:ulong;
	command:Command;
}

union FileType {Experience, Pattern, Sequence, HapticEffect, Tracking, HandleCommand}

table HapticPacket {
	name:string;
	packet:FileType;
	handle:ulong;
}

root_type HapticPacket;